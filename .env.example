# =============================================================================
# BIOMETRICS Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit actual secrets to version control!
# =============================================================================

# =============================================================================
# üîå AI PROVIDER API KEYS
# =============================================================================

# NVIDIA NIM - Primary AI Provider (Qwen 3.5 397B)
# Get your key from: https://build.nvidia.com/
# Required for: OpenCode, OpenClaw
NVIDIA_API_KEY="nvapi-YOUR_KEY_HERE"

# OpenCode ZEN - FREE fallback models (no key required)
# Uses: Big Pickle, Kimi K2.5 Free, GLM 4.7 Free
# No configuration needed - works out of the box

# Google Antigravity - Gemini Models (requires OAuth)
# Use PRIVATE Gmail account (NOT Google Workspace)
# Run: opencode auth add google
# Then: opencode auth login
# Tokens stored in: ~/.config/opencode/antigravity-accounts.json
# No env var needed - uses OAuth tokens

# Moonshot AI - Kimi K2.5
# Run: opencode auth add moonshot-ai
# Then follow prompts to add API key
# No env var needed if using opencode auth

# Kimi For Coding - Code-specialized models
# Run: opencode auth add kimi-for-coding
# Then follow prompts to add API key


# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL - Main Database
# Used by: OpenCode server, OpenClaw, applications
DB_HOST="localhost"
DB_PORT="5432"
DB_USER="postgres"
DB_PASSWORD="YOUR_DB_PASSWORD"
DB_NAME="biometrics"

# Alternative: PostgreSQL URL (overrides individual settings)
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://postgres:YOUR_DB_PASSWORD@localhost:5432/biometrics"

# Redis - Cache & Session Storage
# Used by: OpenCode, caching, session management
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Alternative: Redis URL (overrides individual settings)
# Format: redis://[:password]@host:port/db
REDIS_URL="redis://localhost:6379/0"


# =============================================================================
# üåê NETWORK & URLs
# =============================================================================

# OpenCode Server (local development)
OPENCODE_SERVER_URL="http://localhost:8080"
OPENCODE_SERVER_API_KEY=""

# OpenClaw Server
OPENCLAW_URL="http://localhost:18789"

# Public URLs (when deploying)
PUBLIC_URL="http://localhost:3000"
API_URL="http://localhost:8080/api"


# =============================================================================
# ‚öôÔ∏è APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
NODE_ENV="development"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Feature Flags
ENABLE_TELEGRAM_BOT="true"
ENABLE_WHATSAPP_BOT="true"
ENABLE_SOCIAL_MEDIA="true"

# Session & Auth
SESSION_SECRET="YOUR_SESSION_SECRET_HERE"
JWT_SECRET="YOUR_JWT_SECRET_HERE"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"


