# NVIDIA NIM API Configuration
# Get your API key from: https://build.nvidia.com/
NVIDIA_API_KEY=nvapi-YOUR_NVIDIA_API_KEY_HERE

# GitLab Media Storage
# Create a GitLab project for media files
GITLAB_TOKEN=glpat-YOUR_GITLAB_TOKEN_HERE
GITLAB_MEDIA_PROJECT_ID=79575238
GITLAB_MEDIA_NAMESPACE=your-namespace

# Supabase Database (for media_assets table)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Optional: Cloudflare Tunnel (for public URLs)
CLOUDFLARE_TUNNEL_ID=your-tunnel-id
CLOUDFLARE_DOMAIN=your-domain.com

# Development Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
