{
  "$schema": "https://opencode.ai/schema/oh-my-opencode.json",
  "version": "1.0.0",
  "name": "BIOMETRICS Media Generation Agents",
  "description": "Enterprise God-Mode Media Pipeline with NVIDIA NIM",
  "created": "2026-02-19",
  
  "agents": {
    "flux1-image": {
      "model": "nvidia/flux_1-dev",
      "category": "artistry",
      "description": "Text-to-Image generation with FLUX.1-dev",
      "capabilities": ["text-to-image", "high-quality", "4K output"],
      "endpoint": "https://integrate.api.nvidia.com/v1/images/generations",
      "timeout": 120000
    },
    "flux1-image-edit": {
      "model": "nvidia/flux_1-kontext-dev",
      "category": "artistry",
      "description": "In-context image editing with FLUX.1-Kontext",
      "capabilities": ["image-editing", "inpainting", "style-transfer"],
      "endpoint": "https://integrate.api.nvidia.com/v1/images/edits",
      "timeout": 120000
    },
    "stable-diffusion-35": {
      "model": "nvidia/stable-diffusion-3_5-large",
      "category": "artistry",
      "description": "Stable Diffusion 3.5 Large for high-quality images",
      "capabilities": ["text-to-image", "high-resolution", "photorealistic"],
      "endpoint": "https://integrate.api.nvidia.com/v1/images/generations",
      "timeout": 120000
    },
    "cosmos-video-gen": {
      "model": "nvidia/cosmos-transfer1-7b",
      "category": "visual-engineering",
      "description": "Text-to-Video generation with NVIDIA Cosmos",
      "capabilities": ["text-to-video", "4K", "30fps", "motion-synthesis"],
      "endpoint": "https://integrate.api.nvidia.com/v1/video/generations",
      "timeout": 180000
    },
    "cosmos-video-edit": {
      "model": "nvidia/cosmos-predict1-5b",
      "category": "visual-engineering",
      "description": "Video-to-Video editing with NVIDIA Cosmos Predict",
      "capabilities": ["video-editing", "style-transfer", "enhancement"],
      "endpoint": "https://integrate.api.nvidia.com/v1/video/edits",
      "timeout": 180000
    },
    "trellis-3d": {
      "model": "microsoft/trellis",
      "category": "visual-engineering",
      "description": "Text/Image-to-3D with Microsoft TRELLIS",
      "capabilities": ["text-to-3d", "image-to-3d", "glb-export", "usd-export"],
      "endpoint": "https://integrate.api.nvidia.com/v1/3d/generations",
      "timeout": 300000
    },
    "magpie-voice": {
      "model": "nvidia/magpie-tts-multilingual",
      "category": "artistry",
      "description": "Multilingual Text-to-Speech with Magpie-TTS",
      "capabilities": ["text-to-speech", "multilingual", "voice-cloning"],
      "endpoint": "https://integrate.api.nvidia.com/v1/audio/speech",
      "timeout": 60000
    },
    "studio-voice": {
      "model": "nvidia/studiovoice",
      "category": "artistry",
      "description": "Studio-quality voice optimization",
      "capabilities": ["audio-enhancement", "noise-reduction", "voice-clarity"],
      "endpoint": "https://integrate.api.nvidia.com/v1/audio/enhance",
      "timeout": 60000
    },
    "qwen-vlm": {
      "model": "qwen/qwen3.5-397b-a17b",
      "category": "ultrabrain",
      "description": "Qwen 3.5 397B Vision Language Model for quality checks",
      "capabilities": ["vision", "quality-check", "multimodal", "reasoning"],
      "endpoint": "https://integrate.api.nvidia.com/v1/chat/completions",
      "timeout": 120000
    }
  },
  
  "skills": {
    "production_skill": {
      "file": "skills/production_skill.md",
      "description": "TD-Agent knowledge base for media production"
    }
  },
  
  "environment": {
    "NVIDIA_API_KEY": "${NVIDIA_API_KEY}",
    "GITLAB_TOKEN": "${GITLAB_TOKEN}",
    "GITLAB_MEDIA_PROJECT_ID": "${GITLAB_MEDIA_PROJECT_ID}",
    "SUPABASE_URL": "${SUPABASE_URL}",
    "SUPABASE_KEY": "${SUPABASE_KEY}"
  },
  
  "paths": {
    "inputs": "inputs/",
    "outputs": "outputs/",
    "assets": "assets/",
    "scripts": "scripts/",
    "logs": "logs/",
    "skills": "skills/"
  },
  
  "quality_gates": {
    "video": {
      "min_resolution": "1920x1080",
      "min_fps": 30,
      "max_duration_seconds": 300,
      "vlm_check": true
    },
    "image": {
      "min_resolution": "1024x1024",
      "vlm_check": true
    },
    "audio": {
      "min_sample_rate": 44100,
      "vlm_check": true
    },
    "3d": {
      "formats": ["glb", "usd", "obj"],
      "vlm_check": true
    }
  },
  
  "gitlab_integration": {
    "enabled": true,
    "min_file_size_mb": 1,
    "project_id": "${GITLAB_MEDIA_PROJECT_ID}",
    "branch": "main",
    "commit_message_template": "auto: Add {media_type} - {timestamp}"
  }
}
