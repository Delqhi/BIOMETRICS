{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "OpenCode Standard Project Template",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "opencode": "opencode",
    "opencode:agent": "opencode --agent sisyphus",
    "opencode:plan": "opencode --agent prometheus"
  },
  "keywords": ["opencode", "ai", "agent", "template"],
  "author": "{{AUTHOR}}",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
